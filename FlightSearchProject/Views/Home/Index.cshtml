<style>
    body {
    background-color: rgba(76, 175, 80, 0);
    background: url(https://images.pexels.com/photos/1831271/pexels-photo-1831271.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
}

.card {
    width: 600px;
    background-color: #fff;
    border: none;
    border-radius: 12px
}

.flex{
    display:flex;
}

label.radio {
    cursor: pointer;
    width: 100%
}

label.radio input {
    position: absolute;
    top: 0;
    left: 0;
    visibility: hidden;
    pointer-events: none
}

label.radio span {
    padding: 7px 14px;
    border: 2px solid #eee;
    display: inline-block;
    color: #5c677d;
    border-radius: 25px;
    width: 80%;
    height: 38px;
    line-height: 27px
}

